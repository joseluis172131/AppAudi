<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"
            android:text="Bienvenido" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Tipo de datos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:background="@drawable/style_borde_image"
                    app:srcCompat="@drawable/sportback" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#000000"
                    android:text="Sportback"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:background="@drawable/style_borde_edittext"
                    app:srcCompat="@drawable/audisedan" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="124dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="#000000"
                    android:text="Sedan" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:background="@drawable/style_borde_edittext"
                    app:srcCompat="@drawable/cupe" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#000000"
                    android:textColor="@color/white"

                    android:text="Coupe" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    app:srcCompat="@drawable/sport"
                    android:background="@drawable/style_borde_edittext"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#000000"
                    android:textColor="@color/white"
                    android:text="Sport" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="501dp"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/suv" />

    </LinearLayout>

    <Button
        android:id="@+id/button9"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="#000000"
        android:text="sUV"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            app:srcCompat="@drawable/audi" />
    </LinearLayout>

</LinearLayout>